    "paths": {
        "/user/findAll": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Lista todos os usuários da API",
                "description": "Retorna uma lista com todos os usuários cadastrados na API",
                "tags": [
                    "Usuário"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "name": "limit"
                    },
                    {
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "name": "offset"
                    }
                ],
                "responses": {
                    "200":{
                        "description": "OK - Lista de usuários retornada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized - Usuário não autorizado, ou erro de autenticação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "Mensagem de erro"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404":{
                        "description": "Not Found - Nenhum usuário encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "Mensagem de erro"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description": "Internal Server Error - Erro interno do servidor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "Mensagem de erro"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
