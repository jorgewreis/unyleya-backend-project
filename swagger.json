    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "email": {
                        "type": "string",
                        "description": "E-mail do usuário"
                    },
                    "senha": {
                        "type": "string",
                        "description": "Senha do usuário"
                    },
                    "imagem": {
                        "type": "string",
                        "description": "Imagem do usuário"
                    },
                    "endereço": {
                        "type": "object",
                        "properties": {
                            "rua": {
                                "type": "string",
                                "description": "Rua do usuário"
                            },
                            "numero": {
                                "type": "string",
                                "description": "Número do usuário"
                            },
                            "complemento": {
                                "type": "string",
                                "description": "Complemento do endereço do usuário"
                            },
                            "bairro": {
                                "type": "string",
                                "description": "Bairro do usuário"
                            },
                            "cidade": {
                                "type": "string",
                                "description": "Cidade do usuário"
                            },
                            "estado": {
                                "type": "string",
                                "description": "Estado do usuário"
                            },
                            "cep": {
                                "type": "string",
                                "description": "CEP do usuário"
                            },
                            "dataCriação": {
                                "type": "string",
                                "description": "Data de inclusão do endereço"
                            }
                        }
                    },
                    "telefones": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "ddd": {
                                    "type": "string",
                                    "description": "DDD do telefone"
                                },
                                "numero": {
                                    "type": "string",
                                    "description": "Número do telefone"
                                },
                                "dataCriação": {
                                    "type": "string",
                                    "description": "Data de inclusão do telefone"
                                }
                            }
                        }
                    },
                    "produtosFavoritos": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "idProduto": {
                                    "type": "string",
                                    "description": "ID do produto favorito"
                                },
                                "dataCriação": {
                                    "type": "string",
                                    "description": "Data de inclusão do produto favorito"
                                }
                            }
                        }
                    },
                    "dataCriação": {
                        "type": "string",
                        "description": "Data de criação do usuário"
                    },
                    "admin": {
                        "type": "boolean",
                        "description": "Usuário administrador?"
                    }
                }
            }
